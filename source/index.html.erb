        <div class="project-card">
          <%= image_tag project.image %>
            <h2><%= project.name %></h2>
            <p><%= project.tech %></p>
          <%= link_to "", project.link, class: "card-link", target: "blank" %>
        </div>
      </div>
    <% end %>
    </div>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-xs-12 col-md-offset-4">
      <div class="newsletter padded text-center">
        <h2>/contact</h2>
        <p>N'hésitez pas à me contacter pour me parler de votre projet ou de votre entreprise</p>
        <%= link_to "Contactez-moi", "mailto:bonjour@adalbertogonzalez.com", class: "btn btn-primary", target: "blank"  %>
      </div>
    </div>
  </div>
</div>
