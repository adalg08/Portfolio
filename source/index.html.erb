  <div class="container">
  <div class="row">
    <% data.projects.each do |project| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path project.image %>');">
        <div class="card-category"><%= project.tech %></div>
        <div class="card-description">
          <h2><%= project.name %></h2>
          <p><%= project.summary %></p>
        </div>
        <%= image_tag project.icon, class:"card-user avatar-small" %>
        <%= link_to "", project.link, class: "card-link" %>
      </div>
    </div>
    <% end %>
